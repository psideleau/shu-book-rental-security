from flask import Flask, render_template
app = Flask(__name__)


@app.route("/reset")
def reset():
    return render_template('reset.html')

@app.route('/reset', methods=['POST'])
def my_form_post():
    text = request.form['u']
    processed_text = text.upper()

    return processed_text

if __name__ == "__main__":
    app.run()
