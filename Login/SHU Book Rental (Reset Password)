from flask import Flask, request, jsonify, render_template
app = Flask(__name__)


@app.route("/reset")
def reset():
    return render_template('reset.html')

@app.route('/reset', methods=['POST'])
def my_form_post():
    text = request.form['username']
    processed_text = text.upper()
    return jsonify ({
    "status": 1
    })

  
if __name__ == "__main__":
    app.run()

